limits = [ -2.4,  2.4;    % cart position
           -3.0,  3.0;    % cart velocity
           -0.5,  0.5;    % pole angle (radians)
           -5.0,  5.0 ];  % pole angular velocity

n_states = prod(nbins);   % total number of discrete states
